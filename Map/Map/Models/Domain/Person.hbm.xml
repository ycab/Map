<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="Map" namespace="Domain">
  <class name="Person" table="Person" lazy="true" >
    <id name="ID" column="ID" type="string" >
      <generator class="assigned" />
    </id>
    <property name="Username" column="Username" type="string"></property>
    <property name="Pwd" column="Pwd" type="string"></property>
    <property name="Email" column="Email" type="string"></property>
    <property name="Gender" column="Gender" type="int"></property>
    <property name="Authority" column="Authority" type="int"></property>
  </class>
</hibernate-mapping>